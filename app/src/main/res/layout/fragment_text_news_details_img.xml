<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_news_details_img_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/image_news_details_title"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/news_title" />

        <TextView
            android:id="@+id/text_news_details_pics_no_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toLeftOf="@id/text_news_details_img_txt"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/news_title" />

        <TextView
            android:id="@+id/text_news_details_pics_total_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@id/text_news_details_img_txt"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/news_title" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/text_news_details_pics_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
